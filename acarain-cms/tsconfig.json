{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "../acarain-frontend/lib/components/QRView.tsx", "../acarain-frontend/lib/components/NavbarUser.tsx", "../acarain-frontend/lib/components/Dock.tsx", "../acarain-frontend/app/layout.tsx", "../acarain-frontend/app/page.tsx"],
  "exclude": ["node_modules"]
}
